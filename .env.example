# MLOps Pipeline Configuration
# Copy this file to .env and fill in your values

# MLflow Tracking
MLFLOW_TRACKING_URI=http://127.0.0.1:5000
MLFLOW_EXPERIMENT_NAME=network_traffic_classification

# Prefect Configuration
PREFECT_API_URL=http://127.0.0.1:4200/api

# Model Configuration
MODEL_REGISTRY_PATH=./models
MODEL_NAME=network_classifier

# Data Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_INTERIM_PATH=./data/interim

# Training Configuration
RANDOM_SEED=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.1

# Drift Detection Thresholds
DATA_DRIFT_THRESHOLD=0.1
MODEL_DRIFT_THRESHOLD=0.05
PREDICTION_DRIFT_THRESHOLD=0.1

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_INTERVAL_HOURS=24
RETRAINING_THRESHOLD=0.15

# Alert Configuration (Optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_here
# EMAIL_ALERT=your_email@example.com

# Performance Targets
TARGET_ACCURACY=0.95
TARGET_PRECISION=0.93
TARGET_RECALL=0.93
TARGET_F1=0.93

# Infrastructure
USE_GPU=false
N_JOBS=-1  # Use all CPU cores

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/mlops_pipeline.log
